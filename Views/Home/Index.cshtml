@{
    ViewData["Title"] = "Home";
}

<div class="container d-flex flex-column gap-5 py-5">

    <!-- Hero Section -->
    <section class="text-center bg-light p-5 rounded shadow" data-aos="fade-down">
        <img src="/images/Giri.jpeg" class="rounded-circle img-thumbnail mb-3" style="width: 150px;" alt="Profile" />
        <h1 class="display-5 fw-bold">Hi, I'm Girish Kumar Reddy Gundala</h1>
        <p class="lead text-muted">.NET Developer • Frontend Developer • Problem Solver</p>
        <a class="btn btn-primary btn-lg mt-3" href="/Portfolio">Explore My Work</a>
    </section>

    <!-- Skills Section -->
    @await Html.PartialAsync("_Skills")

    <!-- Testimonials -->
    <section class="bg-dark text-white p-5 rounded shadow" data-aos="fade-up">
        <div class="col-md-12 d-flex justify-content-center align-items-center">
            <img src="/images/people say.jpg" class="img-fluid rounded shadow" alt="Projects" style="max-width: 80%;" />
        </div>

        <h2 class="text-center">What People Say</h2>
        <div class="row mt-4">
            <div class="col-md-6">
                <blockquote class="blockquote">
                    <p>"Girish is a sharp developer who writes clean and scalable code. A great team player!"</p>
                    <footer class="blockquote-footer text-white">Tech Lead at XYZ Corp</footer>
                </blockquote>
            </div>
            <div class="col-md-6">
                <blockquote class="blockquote">
                    <p>"He delivered our project before deadline and exceeded expectations."</p>
                    <footer class="blockquote-footer text-white">Client – Weather App</footer>
                </blockquote>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center p-5 bg-light rounded shadow" data-aos="fade-up">
        <h2>Want to work together?</h2>
        <p class="lead">I'm currently open to freelance and full-time opportunities.</p>
        <a href="/Home/Contact" class="btn btn-outline-success btn-lg">Contact Me</a>
    </section>

</div>
